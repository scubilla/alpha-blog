<div id=page-content">
  <h1 class="text-center mt-4">Lista de articulos</h1>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              bY Scubilla
            </div>
            <div class="card-body">
              <h5 class="card-title">  <td><%= link_to article.title, article_path(article), class: "text-success"  %></td></h5>
              <p class="card-text"><td><%= truncate(article.description, length:100) %></td></p>
              <a href="#" class="btn btn-outline-success">Ver</a>
              <a href="#" class="btn btn-outline-info">Editar</a>
              <a href="#" class="btn btn-outline-danger">Borrar</a>
            </div>
            <div class="card-footer text-muted">
              <small>Creado hace <%= time_ago_in_words(article.created_at) %>, editado hace <%= time_ago_in_words(article.updated_at) %></small>
            </div>
          </div>
        </div>
      </div>      
    <% end %>
  </div>  
</div>  

